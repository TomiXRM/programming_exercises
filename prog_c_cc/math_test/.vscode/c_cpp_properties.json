{
  "configurations": [
    {
      "name": "macos-clang-arm64",
      "includePath": [
        "${workspaceFolder}/**",
        "${workspaceFolder}/lib/**",  // libディレクトリのヘッダファイルを含む
        "/usr/include",                // システムの標準ライブラリを含む
        "/usr/local/include"           // 追加の標準ライブラリディレクトリを含む
      ],
      "compilerPath": "/usr/bin/clang",
      "cStandard": "c11",              // 明示的にC標準を設定
      "cppStandard": "c++17",          // C++標準 (もし必要なら)
      "intelliSenseMode": "macos-clang-arm64",
      "compilerArgs": [
        "-I${workspaceFolder}/lib",    // libディレクトリのヘッダファイルを参照
        "-Wall",                       // 追加のコンパイラフラグ
        "-g"
      ]
    }
  ],
  "version": 4
}
